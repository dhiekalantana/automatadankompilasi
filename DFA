//referensi: https://www.belajarcpp.com/artikel/penjelasan-dan-contoh-program-dfa-deterministic-finite-automaton-dengan-bahasa-c/

#include<iostream>
#include<string.h>
using namespace std;
 
int dfa = 0; //dfa di inisialisasi di state awal

//dfa = 1 -> state 1/q1
//dfa = 2 -> state 2/q2
   
void State0(char c) 
{ 
    if ( c == '1' ) 
        dfa = 1; //jika q0 diberikan 1 maka pindah ke q1 
    else
        dfa = 0;  
} 
   
void State1(char c) 
{ 
    if (c == '0' ) 
        dfa = 2; 
    else
        dfa = 0;
} 
   
void State2(char c) 
{ 
    if (c == '1' ) 
        dfa = 2;
    else
        dfa = 1;
} 
   
int diterima(char str[]) 
{ 
    int i, len = strlen(str); 
   
    for ( i=0; i < len; i++) { 
            if (dfa == 0) 
                State0(str[i]); 
   
            else if (dfa == 1) 
                State1(str[i]); 
   
            else if (dfa == 2) 
                State2(str[i]); 
   
            else
                return 0; 
    } 
    if(dfa == 2) 
        return 1; 
    else
        return 0; 
} 
 
int main() 
{ 
    char str[10];  //maks string yang bisa masuk cuma 10
    printf("Masukan bilangan biner: ");
    fgets(str,10,stdin);
    if (diterima(str)) 
        printf("\nDiterima\n"); 
    else
        printf("Ditolak\n"); 
    return 0; 
} 
